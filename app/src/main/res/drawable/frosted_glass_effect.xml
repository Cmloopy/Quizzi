<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp nền bán trong suốt -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AAEAEAEA" /> <!-- #AA là độ trong suốt khoảng 67% -->
        </shape>
    </item>

    <!-- Lớp gradient mờ tạo cảm giác nhòe -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22FFFFFF"
                android:endColor="#55FFFFFF"
                android:angle="90" />
        </shape>
    </item>

    <!-- Lớp mỏng trắng tạo hiệu ứng kính mờ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
        </shape>
    </item>
</layer-list>