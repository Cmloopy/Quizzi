<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <!-- Top toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:titleTextColor="@android:color/black"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Nút Back -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="Back" />

        <!-- Nhóm icon bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_share"
                android:contentDescription="Send" />

            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_options"
                android:contentDescription="More" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with banner -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img"
                    android:background="@drawable/img"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    />
            </FrameLayout>

            <!-- Profile Info -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="30dp">

                <!-- Sử dụng ImageView thông thường thay vì CircleImageView để tránh lỗi thư viện -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/avt"
                    android:background="@drawable/avt"
                    android:padding="2dp"
                    android:scaleType="centerCrop" />

                <!-- Thông tin người dùng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_image"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rayford Eddings"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/verified_badge"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_verified"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@rayford_eddings"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#5D5FEF"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="4dp"
                    app:cornerRadius="22dp"/>
            </RelativeLayout>

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp">

                <!-- Quizzo Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/quizzo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="265"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quizzo"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Plays Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/plays_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32M"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plays"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Players Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/players_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="274M"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Players"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Secondary Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp">

                <!-- Collections Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/collections_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="49"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collections"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Followers Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/followers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="927.3K"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Following Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/following_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="following"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Navigation Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_quizzo"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    app:cornerRadius="25dp"
                    android:layout_weight="1"
                    android:text="Quizzo"
                    android:textAllCaps="false"
                    android:backgroundTint="#F0F0F0"
                    android:layout_marginHorizontal="16dp"
                    app:strokeColor="#5D5FEF"
                    app:strokeWidth="2dp"
                    android:textColor="#5D5FEF"/>

                <Button
                    android:id="@+id/btn_collections"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    app:cornerRadius="25dp"
                    android:layout_weight="1"
                    android:text="Collections"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#5D5FEF"
                    android:layout_marginHorizontal="0dp"
                    />

                <Button
                    android:id="@+id/btn_about"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    app:cornerRadius="25dp"
                    android:layout_weight="1"
                    android:text="About"
                    android:textAllCaps="false"
                    android:backgroundTint="#F0F0F0"
                    android:layout_marginHorizontal="16dp"
                    app:strokeColor="#5D5FEF"
                    app:strokeWidth="2dp"
                    android:textColor="#5D5FEF"/>
            </LinearLayout>

            <!-- 49 Collections Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49 Collections"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sort_newest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Newest"
                        android:textColor="#5D5FEF"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/icon_sort"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_22_sort"
                        android:contentDescription="Sort icon"/>
                </LinearLayout>

            </RelativeLayout>

            <!-- Collection Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp">

                <!-- Education Collection -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/behind_the_smart"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp"/>
                </FrameLayout>

                <!-- Productivity Collection -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/back_to_school"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productivity"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp"/>
                </FrameLayout>

                <!-- Business Collection -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/back_to_school"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp"
                        />
                </FrameLayout>

                <!-- Finance Collection -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_corner_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/back_to_school"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corner_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finance"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp" />

                </FrameLayout>
            </GridLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>