<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    android:layout_width="180dp"
    android:layout_height="210dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_category"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 Qs"
        android:textColor="@color/white"
        android:layout_marginTop="85dp"
        android:background="@color/pp"
        android:padding="5dp"
        android:textSize="11sp"
        android:layout_marginStart="130dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/nunitomedium"
        android:text="Get Smarter with Productivity Quizz..."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_biaAuthor"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:shapeAppearanceOverlay="@style/CornerShapableImageView4"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="180dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_name_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="@color/black"
        android:layout_marginTop="181dp"
        android:layout_marginStart="33dp"
        android:text="Malagang Neil"/>
</androidx.cardview.widget.CardView>