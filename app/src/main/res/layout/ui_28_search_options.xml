<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/tabGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Quiz Tab (Selected by Default) -->
        <RadioButton
            android:id="@+id/radioQuizBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radio_button_selector"
            android:text="Quiz"
            android:textSize="16sp"
            android:textColor="@drawable/radio_button_text_color"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:button="@null" />

        <!-- People Tab (Unselected) -->
        <RadioButton
            android:id="@+id/radioPeopleBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/radio_button_selector"
            android:text="People"
            android:textSize="16sp"
            android:textColor="@drawable/radio_button_text_color"
            android:padding="10dp"
            android:button="@null" />

        <!-- Collections Tab (Unselected) -->
        <RadioButton
            android:id="@+id/radioCollectionBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radio_button_selector"
            android:text="Collections"
            android:textSize="16sp"
            android:textColor="@drawable/radio_button_text_color"
            android:padding="10dp"
            android:button="@null"
             />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>