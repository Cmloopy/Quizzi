<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".activity_followers">

    <ImageView
        android:id="@+id/ui41BtnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_05_back"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ui41NameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ui41BtnBack"
        app:layout_constraintEnd_toStartOf="@+id/ui41BtnFind"
        android:text="Andrew Ainsley"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ui41BtnFind"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_15_find"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/ui41ButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ui41NameUser">

        <Button
            android:id="@+id/btnFollowers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="20dp"
            android:layout_weight="1"
            android:background="@drawable/quizz_details_button_solo_background"
            android:text="Followers"
            android:textSize="12sp"
            android:textColor="#7A48E3"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnFollowing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="20dp"
            android:layout_weight="1"
            android:text="Following"
            android:textSize="12sp"
            android:background="@drawable/quizz_details_button_friends_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ui41RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ui41ButtonContainer"
        android:scrollbars="none"/>
</androidx.constraintlayout.widget.ConstraintLayout>
